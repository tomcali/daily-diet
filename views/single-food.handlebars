<h1>Update the quote with an id of {{this.id}}</h1>

<form class="create-update-form" action="/{{this.id}}?_method=PUT" method="POST">


  <div class="form-group">
    <label for="food">Food:</label>
    <textarea id="food" name="food" rows="8" cols="40">{{this.food}}</textarea>
  </div>

    <div class="form-group">
        <label for="calories">Calories:</label>
        <input type="text" id="calories" name="calories" value="{{this.calories}}">
    </div>

    <button type="submit">Update Food</button>
</form>
