<h1>Daily Diet App</h1>

<p>Manage foods with this app</p>

<!-- Pass in data from server.js -->
<ul>
  {{#each foods}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Food:</span> {{this.food}}</p>
      <p><span class="label">Calories:</span> {{this.calories}}</p>

      <form action="/{{this.id}}?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit">Delete</button>
      </form>

      <a href="/{{this.id}}">Update this quote</a>
  	</li>
  {{/each}}
</ul>

<h2>Add a Food Item</h2>

<form class="create-form" action="/" method="POST">

  <div class="form-group">
    <label for="food">Food item:</label>
      <textarea id="food" name="food" rows=8" cols="40"></textarea>
  </div>

  <div class="form-group">
    <label for="calories">Calories:</label>
      <input type="text" id="calories" name="calories">

  </div>

  <button type="submit">Add Food</button>
</form>
